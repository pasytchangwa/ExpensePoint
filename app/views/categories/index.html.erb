<section class="container">
  <div class="header flex-row align-center mt-10">
    <div><%= link_to root_path, class: 'has-text-white' do %>
      <span class="material-icons-outlined">home</span>
    <% end %></div>

    <h2 class="mr-auto ml-auto">CATEGORIES</h2>

    <div><%= button_to destroy_user_session_url, method: :get, class: 'button has-text-white' do %>
      <span class="material-icons-outlined">logout</span>
    <% end %></div>
  </div>

  <ul class="flex-col list-col gap-10">
    <%= render @categories %>
  </ul>

  
  <div class="list-button">
  <%= link_to 'ADD A NEW CATEGORY', new_category_path %>
  </div>
</section>